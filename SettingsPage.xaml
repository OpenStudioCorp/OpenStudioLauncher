<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.SettingsPage"
             Title="SettingsPage"
              BackgroundColor="CadetBlue">
    <StackLayout>
        <Label Text="Settings" FontSize="Large" HorizontalOptions="Center" Margin="0,20,0,0" />
        <Label Text="Notifications" FontSize="Medium" Margin="20,10,0,0" />
        <Switch x:Name="NotificationsSwitch" Margin="20,0,0,0" />
        <Label Text="App Sounds" FontSize="Medium" Margin="20,10,0,0" />
        <Switch x:Name="AppSoundsSwitch" Margin="20,0,0,0" />
        <Label Text="Update Notifications" FontSize="Medium" Margin="20,10,0,0" />
        <Switch x:Name="UpdateNotificationsSwitch" Margin="20,0,0,0" />
        <Label Text="Language" FontSize="Medium" Margin="20,10,0,0" />
        <Picker x:Name="LanguagePicker" Margin="20,0,0,0">
            <Picker.Items>
                <x:String>English</x:String>
                <x:String>Spanish</x:String>
                <x:String>French</x:String>
            </Picker.Items>
        </Picker>
        <Button Text="Save" Clicked="OnSaveClicked" Margin="20" />
    </StackLayout>
</ContentPage>