<Window x:Class="OpenStudioLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenStudioLauncher"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="1000" Background="DarkGray">
    <Grid>
        <ListView d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,840,20">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <ScrollBar HorizontalAlignment="Left" Margin="160,0,0,0" VerticalAlignment="Center" Height="484"/>
        <ProgressBar HorizontalAlignment="Left" Height="20" Margin="0,464,0,0" VerticalAlignment="Top" Width="160"/>
        <ToolBar Margin="177,0,0,460">
            <Button Content="New" Click="projectsButton_Click"/>
            <Button Content="Save" Click="aboutbutton_click"/>
            <Button Content="settings" Click="Button_Click"/>
            <Button Content="help" Click="Button_Click_1"/>
        </ToolBar>



    </Grid>
</Window>
