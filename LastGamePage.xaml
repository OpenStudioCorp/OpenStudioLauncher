<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.LastGamePage"
             Title="LastGamePage">
<StackLayout>
        <Label Text="Last Game Played" FontSize="Large" HorizontalOptions="Center" Margin="0,20,0,0" />
        <Label Text="Game Name:" FontSize="Medium" Margin="20,10,0,0" />
        <Entry x:Name="GameNameEntry" Margin="20,0,0,0" />
        <Label Text="Score:" FontSize="Medium" Margin="20,10,0,0" />
        <Entry x:Name="ScoreEntry" Margin="20,0,0,0" />
        <Button Text="Save" Clicked="OnSaveClicked" Margin="20" />

    </StackLayout>
</ContentPage>